<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_splash_screen">

    <fragment
        android:id="@+id/nav_splash_screen"
        android:name="ballpark.buddy.android.ui.splash.presentation.SplashFragment"
        app:popUpToInclusive="true">

        <action
            android:id="@+id/action_splash_to_login"
            app:destination="@+id/nav_login_fragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"
            app:popUpTo="@id/mobile_navigation"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_splash_to_home"
            app:destination="@+id/nav_nitaqat_calculator_fragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"
            app:popUpTo="@id/mobile_navigation"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splash_to_on_boarding"
            app:destination="@+id/nav_on_boarding_screen"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"
            app:popUpTo="@id/mobile_navigation"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/nav_login_fragment"
        android:name="ballpark.buddy.android.ui.auth.presentation.LoginFragment"
        android:label="@string/login"
        tools:layout="@layout/login_fragment">

        <action
            android:id="@+id/nav_login_to_create_account"
            app:destination="@id/navigation_create_account"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />
<!--        <action-->
<!--            android:id="@+id/nav_login_to_forget_password"-->
<!--            app:destination="@id/nav_forget_password"-->
<!--            app:enterAnim="@anim/slide_in"-->
<!--            app:exitAnim="@anim/fade_out"-->
<!--            app:popEnterAnim="@anim/fade_in"-->
<!--            app:popExitAnim="@anim/slide_out" />-->

<!--        <action-->
<!--            android:id="@+id/nav_login_to_home"-->
<!--            app:destination="@id/navigation_my_cover_home"-->
<!--            app:enterAnim="@anim/slide_in"-->
<!--            app:exitAnim="@anim/fade_out"-->
<!--            app:popEnterAnim="@anim/fade_in"-->
<!--            app:popExitAnim="@anim/slide_out"-->
<!--            app:popUpTo="@id/mobile_navigation"-->
<!--            app:popUpToInclusive="true" />-->
    </fragment>

    <fragment
        android:id="@+id/navigation_create_account"
        android:name="ballpark.buddy.android.ui.auth.presentation.CreateAccountFragment"
        android:label="@string/create_account"
        app:enterAnim="@anim/slide_in"
        app:exitAnim="@anim/fade_out"
        app:popEnterAnim="@anim/fade_in"
        app:popExitAnim="@anim/slide_out"
        tools:layout="@layout/create_account_fragment" />

    <fragment
        android:id="@+id/nav_home"
        android:name="ballpark.buddy.android.ui.home.HomeFragment"
        android:label="@string/menu_home"
        app:enterAnim="@anim/slide_in"
        app:exitAnim="@anim/fade_out"
        app:popEnterAnim="@anim/fade_in"
        app:popExitAnim="@anim/slide_out"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_calculators"
        android:name="ballpark.buddy.android.ui.calculators.presentation.CalculatorFragment"
        android:label="@string/menu_calculators"
        tools:layout="@layout/fragment_calculator">

        <action
            android:id="@+id/nav_calculators_to_nitaqat"
            app:destination="@id/nav_nitaqat_calculator_fragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/nav_calculators_to_end_service"
            app:destination="@id/nav_end_service_calculator_fragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/nav_calculators_to_work_permit"
            app:destination="@id/nav_work_permit_calculator"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/nav_feedback"
        android:name="ballpark.buddy.android.ui.feedback.FeedbackFragment"
        android:label="@string/feedback"
        app:enterAnim="@anim/slide_in"
        app:exitAnim="@anim/fade_out"
        app:popEnterAnim="@anim/fade_in"
        app:popExitAnim="@anim/slide_out"
        tools:layout="@layout/fragment_feedback" />

    <fragment
        android:id="@+id/nav_end_service_calculator_fragment"
        android:name="ballpark.buddy.android.ui.calculators.presentation.EndServiceCalculator"
        android:label="@string/calculator"
        app:enterAnim="@anim/slide_in"
        app:exitAnim="@anim/fade_out"
        app:popEnterAnim="@anim/fade_in"
        app:popExitAnim="@anim/slide_out"
        tools:layout="@layout/end_service_calculator_fragment" />

    <fragment
        android:id="@+id/nav_work_permit_calculator"
        android:name="ballpark.buddy.android.ui.calculators.presentation.WorkPermitFragment"
        android:label="@string/calculator"
        app:enterAnim="@anim/slide_in"
        app:exitAnim="@anim/fade_out"
        app:popEnterAnim="@anim/fade_in"
        app:popExitAnim="@anim/slide_out"
        tools:layout="@layout/work_permit_fragment" />

    <fragment
        android:id="@+id/nav_nitaqat_calculator_fragment"
        android:name="ballpark.buddy.android.ui.calculators.presentation.NitaqatCalculator"
        android:label="@string/calculator"
        app:enterAnim="@anim/slide_in"
        app:exitAnim="@anim/fade_out"
        app:popEnterAnim="@anim/fade_in"
        app:popExitAnim="@anim/slide_out"
        tools:layout="@layout/nitaqat_calculator_fragment" >

        <action
            android:id="@+id/nav_nitaqat_to_webView"
            app:destination="@id/nav_web_view"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/nav_web_view"
        android:name="ballpark.buddy.android.ui.webView.WebviewFragment"
        android:label="Calculation Details"
        tools:layout="@layout/webview_fragment">

        <argument
            android:name="webUrl"
            app:argType="string"/>
    </fragment>


</navigation>